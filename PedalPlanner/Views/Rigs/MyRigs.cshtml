@model IEnumerable<Rig>
@*

*@
@{
}

<h1>@ViewData["Rig"]'s Rigs</h1>

<body>
    <div class="table-responsive">
        <table class="table table-sm table-responsive table-striped table-bordered">
            <thead>
                <tr>
                    <th>Instrument</th>
                    <th>Board Size</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Rig r in Model)
                {
                    <tr>
                        <td>@r.Instrument</td>
                        <td>@r.BoardSize</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
